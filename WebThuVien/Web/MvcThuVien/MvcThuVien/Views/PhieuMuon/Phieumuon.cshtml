@using MvcThuVien.Models
@model List<Phieumuon>
@{
    ViewBag.Title = "Phieumuon";
    Layout = "~/Views/Shared/_LayoutUser1.cshtml";
}

<h2 style="text-align:center">THÔNG TIN PHIẾU MƯỢN</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td>Mã sách</td>
        <td>Tên sách</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.iMasach</td>
            <td>@item.sTensach</td>
            <td><img src="~/Images/@item.sAnhbia" width="100" height="150" /></td>
            @using (Html.BeginForm("CapnhatPhieumuon", "Phieumuon", new { @iMaSP = item.iMasach }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow" />
                </td>
                <td><a href="@Url.Action("Details","BookStore",new { id = item.iMasach })">Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaPhieumuon", new { @iMaSP = item.iMasach })</td>
                <td><input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right;color:red">
        <td colspan="7">Số lượng sách : @ViewBag.Tongsoluong</td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="7">
            @Html.ActionLink("Xóa Phiếu Mượn", "XoaTatcaPhieumuon")
        </td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="7" align="center">
            @Html.ActionLink("MƯỢN", "DatPhieu", "Phieumuon")
        </td>
    </tr>
</table>