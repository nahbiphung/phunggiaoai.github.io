<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/admincss/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/admincss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admincss/Bootswatch.css" rel="stylesheet" />
    <link href="~/Content/admincss/Minty.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Admin")">HOME <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Sach","Admin")">SÁCH</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Docgia","Admin")">ĐỌC GIẢ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">PHIẾU MƯỢN SÁCH</a>
                </li>
                @if (Session["TaikhoanAdmin"] != null)
                {
                    <li style="margin-top: 0.45em"><a href="#" style="text-decoration:none;color:#fff;">User : @Session["TenNguoiDung"]  </a></li>
                    <li>
                        <!-- Log out -->
                        @using (Html.BeginForm("Logout", "Nguoidung", FormMethod.Post))
                        {
                            <button class="btn btn-primary" type="submit">Ðăng Xuất</button>
                        }
                    </li>
                }
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>

            </form>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
